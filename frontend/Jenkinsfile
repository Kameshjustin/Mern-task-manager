pipeline {
    agent any

    environment {
        AWS_REGION = "eu-north-1"
        S3_BUCKET = "react102026"
        CLOUDFRONT_DISTRIBUTION_ID = "E23JNKTP2I50R3"
        // This helps resolve issues with older Node.js versions and OpenSSL
        NODE_OPTIONS = "--openssl-legacy-provider"
    }

    options {
        timestamps()
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: 'frontend-credentials',
                    url: 'https://github.com/Kameshjustin/Mern-task-manager.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('frontend') {
                    echo "Installing NPM packages..."
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    echo "Starting Production Build..."
                    // CI=false prevents the build from failing due to ESLint warnings
                    sh 'CI=false npm run build'
                }
            }
        }

        stage('Verify Build Output') {
            steps {
                dir('frontend') {
                    // Ensures the build folder exists before trying to deploy
                    sh 'ls -la build'
                }
            }
        }

        stage('Deploy to S3') {
            steps {
                // Ensure 'react1126' exists in Jenkins -> Credentials
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'react1126'
                ]]) {
                    dir('frontend') {
                        echo "Syncing build folder to S3 bucket: ${S3_BUCKET}"
                        sh "aws s3 sync build/ s3://${S3_BUCKET}/ --delete --region ${AWS_REGION}"
                    }
                }
            }
        }

        stage('Invalidate CloudFront Cache') {
            when {
                expression { env.CLOUDFRONT_DISTRIBUTION_ID?.trim() }
            }
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'react1126'
                ]]) {
                    echo "Invalidating CloudFront cache for: ${CLOUDFRONT_DISTRIBUTION_ID}"
                    sh "aws cloudfront create-invalidation --distribution-id ${CLOUDFRONT_DISTRIBUTION_ID} --paths '/*'"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment Successful! Your app is live."
        }
        failure {
            echo "❌ Pipeline failed. Check the logs for build or permission errors."
        }
    }
}
